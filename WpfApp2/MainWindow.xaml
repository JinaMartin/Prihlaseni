        <Label Content="Heslo:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,125,0,0"/>
        <Label Content="Zopakujte heslo:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,195,0,0"/>
